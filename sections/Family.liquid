{% schema %}
{
  "name": "Feature Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Everyone in our network is part of a family-owned business"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Feature Icon"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Feature Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Feature Description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Feature Section",
      "category": "Custom",
      "blocks": [
        {
          "type": "feature",
          "settings": {
            "title": "Operating since 1995",
            "description": "Three decades of experience"
          }
        },
        {
          "type": "feature",
          "settings": {
            "title": "15-Year Warranty",
            "description": "On Durasheen paint coat finishes"
          }
        },
        {
          "type": "feature",
          "settings": {
            "title": "Manufactured in Australia",
            "description": "Designed, engineered, and manufactured in Australia"
          }
        },
        {
          "type": "feature",
          "settings": {
            "title": "Complete System",
            "description": "We deliver everything needed to construct your project to site"
          }
        }
      ]
    }
  ]
}
{% endschema %}

<style>
.feature-section {
  text-align: center;
  padding: 50px 0;
}

.feature-list {
  display: flex;
  justify-content: center;
  gap: 40px;
  flex-wrap: wrap;
}

.feature-item {
  text-align: center;
  max-width: 200px;
}

.feature-item img {
  width: 60px;
  height: auto;
  margin-bottom: 10px;
}

.feature-item h3 {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 5px;
}

.feature-item p {
  font-size: 14px;
  color: #666;
}
</style>

<div class="feature-section">
  <h2>{{ section.settings.heading }}</h2>
  <div class="feature-list">
    {% for block in section.blocks %}
      <div class="feature-item">
        {% if block.settings.icon %}
          <img src="{{ block.settings.icon | img_url: 'medium' }}" alt="{{ block.settings.title }}">
        {% endif %}
        <h3>{{ block.settings.title }}</h3>
        <p>{{ block.settings.description }}</p>
      </div>
    {% endfor %}
  </div>
</div>
