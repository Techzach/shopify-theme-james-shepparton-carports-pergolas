{% schema %}
{
  "name": "Custom Icon List",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Our Features"
    }
  ],
  "blocks": [
    {
      "type": "icon_item",
      "name": "Icon Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Fast Shipping"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Description",
          "default": "We deliver your products quickly and safely."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Icon List",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<section class="custom-icon-list">
  <h2>{{ section.settings.heading }}</h2>
  <div class="icon-list">
    {% for block in section.blocks %}
      <div class="icon-item">
        {% if block.settings.icon != blank %}
          <img src="{{ block.settings.icon | img_url: 'medium' }}" alt="{{ block.settings.title }}">
        {% endif %}
        <h3>{{ block.settings.title }}</h3>
        <p>{{ block.settings.description }}</p>
      </div>
    {% endfor %}
  </div>
</section>

<style>
  .custom-icon-list {
    text-align: center;
    padding: 40px;
  }
  .icon-list {
    display: flex;
    justify-content: center;
    gap: 20px;
  }
  .icon-item {
    text-align: center;
    max-width: 200px;
  }
  .icon-item img {
    width: 50px;
    height: 50px;
  }
</style>
