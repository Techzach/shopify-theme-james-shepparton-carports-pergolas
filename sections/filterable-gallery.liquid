{% schema %}
{
  "name": "Gallery Section",
  "settings": [
    {
      "type": "header",
      "content": "Gallery Images"
    },
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "Image 1"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Image 2"
    },
    {
      "type": "image_picker",
      "id": "image_3",
      "label": "Image 3"
    }
  ],
  "presets": [
    {
      "name": "Gallery Section",
      "category": "Image"
    }
  ]
}
{% endschema %}

<div class="gallery-section">
  <div class="gallery-wrapper">
    {% if section.settings.image_1 %}
      <img src="{{ section.settings.image_1 | img_url: 'large' }}" alt="Gallery Image 1">
    {% endif %}
    {% if section.settings.image_2 %}
      <img src="{{ section.settings.image_2 | img_url: 'large' }}" alt="Gallery Image 2">
    {% endif %}
    {% if section.settings.image_3 %}
      <img src="{{ section.settings.image_3 | img_url: 'large' }}" alt="Gallery Image 3">
    {% endif %}
  </div>
</div>

<style>
  .gallery-section {
    text-align: center;
    padding: 20px;
  }
  .gallery-wrapper {
    display: flex;
    gap: 10px;
    justify-content: center;
  }
  .gallery-wrapper img {
    max-width: 100%;
    height: auto;
    border-radius: 10px;
  }
</style>
