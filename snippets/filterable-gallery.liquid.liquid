<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Filterable Image Gallery</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
        }
        .filter-buttons {
            margin-bottom: 20px;
        }
        .filter-buttons button {
            padding: 10px 15px;
            margin: 5px;
            cursor: pointer;
            border: none;
            background: #d92a5b;
            color: white;
            font-size: 16px;
            border-radius: 5px;
        }
        .gallery {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 15px;
        }
        .gallery-item {
            position: relative;
            width: 300px;
            overflow: hidden;
        }
        .gallery-item img {
            width: 100%;
            display: block;
            transition: transform 0.3s;
        }
        .gallery-item:hover img {
            transform: scale(1.1);
        }
        .overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(217, 42, 91, 0.7);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            opacity: 0;
            transition: opacity 0.3s;
        }
        .gallery-item:hover .overlay {
            opacity: 1;
        }
    </style>
</head>
<body>
    <h2>Our Latest Projects</h2>
    <div class="filter-buttons">
        <button onclick="filterSelection('all')">All Cases</button>
        <button onclick="filterSelection('pergola')">Pergola</button>
        <button onclick="filterSelection('patio')">Patio</button>
        <button onclick="filterSelection('carport')">Carports</button>
    </div>
    <div class="gallery">
        <div class="gallery-item pergola"><img src="pergola.jpg" alt="Pergola"><div class="overlay">Pergola</div></div>
        <div class="gallery-item patio"><img src="patio.jpg" alt="Patio"><div class="overlay">Patio</div></div>
        <div class="gallery-item carport"><img src="carport.jpg" alt="Carport"><div class="overlay">Carport</div></div>
        <div class="gallery-item pergola"><img src="pergola2.jpg" alt="Pergola"><div class="overlay">Pergola</div></div>
    </div>

    <script>
        function filterSelection(category) {
            let items = document.querySelectorAll(".gallery-item");
            if (category === "all") {
                items.forEach(item => item.style.display = "block");
            } else {
                items.forEach(item => {
                    item.style.display = item.classList.contains(category) ? "block" : "none";
                });
            }
        }
    </script>
</body>
</html>
